dcssh() {
  if [ "$1" == "zenu" ]; then
    docker exec -it alcatraz_www.zenu.dv_1 /bin/bash
  elif [ "$1" == "subzero" ]; then
    docker exec -it alcatraz_www.subzero.dv_1 /bin/bash
  else
    echo "Unknown container '${1}', Use 'zenu' or 'subzero'"
  fi
}

